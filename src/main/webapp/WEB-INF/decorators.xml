<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/api*</pattern>
    </excludes>
    <decorator name="admin-theme" page="admin-theme.jsp">
        <pattern>/backend/*</pattern>
        <pattern>/backend/product/*</pattern>
        <pattern>/backend/category/*</pattern>
    </decorator>
    <decorator name="basic-theme" page="basic-theme.jsp">
        <pattern>/basic/*</pattern>
        <pattern>/</pattern>
        <pattern>/productDetail</pattern>
        <pattern>/store.jsp</pattern>
        <pattern>/blank.jsp</pattern>
        <pattern>/checkout.jsp</pattern>
    </decorator>
</decorators>
